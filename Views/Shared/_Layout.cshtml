<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BITE ME! - Amerikansk mat i Stockholm</title>
    <meta name="description" content="Ät riktigt god mat med inspiration från USA på BITE ME!. Ni hittar oss i centrala Stockholm. Kom...!" />
    <meta name="keywords" content="Restaurang, USA, MAt, Stockholm, hamburgare, BBQ, revben" />
    <meta property="og:title" content="BITE ME! - Mat inspirerad av USA" />
    <meta property="og:description" content="Ät riktigt god mat, t.ex. hamburgare och BBQ-revben, med inspiration från USA. Ni hittar oss i centrala Stockholm." />
    <meta property="og:image" content="URL till en bild som ska visas när sidan delas" />
    <meta property="og:url" content="https://localhost:7088/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="sv_SE" />
    <meta name="twitter:card" content="" />
    <meta name="twitter:title" content="BITE ME! - Mat inspirerad av USA" />
    <meta name="twitter:description" content="Ät riktigt god mat med inspiration från USA på BITE ME!. Ni hittar oss i centrala Stockholm." />
    <meta name="twitter:image" content="en passande länkad bild" />
    <link rel="canonical" href="https://localhost:7088/" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BITE ME!</a>
                @* <img src="~/Images/bitemeLogo.png" class="logo" alt="Bite me!-logo" /> *@


                <div class="nav-intro">

                    <p>Welcome to BITE ME! Eat food inspired from USA!</p>

                </div>

                <div class="nav-where">
                    <p>Where:</p>
                    <p>Hamngatan 10,</p>
                    <p>11111, Stockholm</p>
                </div>

                <div class="nav-when">
                    <p>Open:</p>
                    <p>Mon-Thu: 12-19</p>
                    <p>Fri-Sun: 12-22</p>
                </div>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">


                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            }
                        </li>

                        <li class="nav-item">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                    <a class="nav-link text-dark" asp-controller="Menu" asp-action="Index">Menu</a>
                            }     
                        </li>

                        <li class="nav-item">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                    <a class="nav-link text-dark" asp-controller="Reservations" asp-action="Create">Reservation</a>
                            }       
                        </li>

                        <li class="nav-logout ms-auto">
                            @* added so that button is gone, when logged in *@
                            @if (!User.Identity.IsAuthenticated)
                            {
                                    <a class="nav-link text-dark" asp-controller="Accounts" asp-action="Login">Login</a>

                            }
                            </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="AdminMenu" asp-action="Index">AdminMenu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="AdminReservations" asp-action="Index">AdminReservations</a>
                                </li>
                            <li class="nav-item ms-auto">
                                    <form asp-controller="Accounts" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                                    </form>
                                </li>
                        }


                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

