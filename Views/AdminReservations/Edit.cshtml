@model RestaurantMVC.Models.EditReservationVM


<h1>Edit Reservation</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="TableId">Table ID</label>
        <input asp-for="TableId" class="form-control" />
        <span asp-validation-for="TableId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationStart">Reservation Start</label>
        <input asp-for="ReservationStart" class="form-control" />
        <span asp-validation-for="ReservationStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NoOfPeople">Number of People</label>
        <input asp-for="NoOfPeople" class="form-control" />
        <span asp-validation-for="NoOfPeople" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ReservationId" />


    <button type="submit" class="btn btn-outline-success">Save</button>
    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}